<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="4dp"
    card_view:cardElevation="@dimen/stepCardElevation"
    android:layout_marginTop="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewInquiryDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:layout_margin="8dp"
            android:text="Destination: "
            android:textColor="@color/grey"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewInquiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:layout_margin="8dp"
            android:text="Date: "
            android:textColor="@color/grey"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewInquiryAgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:layout_margin="8dp"
            android:text="Agent: "
            android:textColor="@color/grey"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/textViewInquiryStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="verdana"
            android:layout_margin="8dp"
            android:text="Status: "
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btnCheckOffer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="CheckOffer"
                android:text="Check Offer" />
            <Button
                android:id="@+id/btnDeleteInquiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="deleteInquiry"
                android:text="Delete Inquiry" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
